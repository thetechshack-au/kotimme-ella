{%- liquid
  assign card_product = block.settings.product
-%}
<div class="card--block-title">
  <input type="checkbox" value="{{ card_product.title | split: '|' | first | handleize }}" checked autocomplete="off" id="bundle-product-item-{{ card_product.id }}" />
  {%- if card_product and card_product != empty -%}
    {%- render 'card-product-heading', card_product: card_product, block: block -%}
  {%- else -%}
    {%- assign placeholder = 'content.product_title' | t -%}
    {% render 'text', fallback_text: placeholder, block: block %}
  {%- endif -%}
</div>
{% schema %}
{
  "name": "t:names.product_title",
  "tag": null,
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "t:settings.product"
    },
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit"
        },
        {
          "value": "100%",
          "label": "t:options.fill"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:settings.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "left",
      "visible_if": "{{ block.settings.width == '100%' }}"
    },
    {
      "type": "header",
      "content": "t:content.typography"
    },
    {
      "type": "select",
      "id": "type_preset",
      "label": "t:settings.preset",
      "options": [
        {
          "value": "rte",
          "label": "t:options.default"
        },
        {
          "value": "paragraph",
          "label": "t:options.paragraph"
        },
        {
          "value": "h1",
          "label": "t:options.h1"
        },
        {
          "value": "h2",
          "label": "t:options.h2"
        },
        {
          "value": "h3",
          "label": "t:options.h3"
