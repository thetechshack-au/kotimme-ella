{%- liquid
  assign bl_stts = block.settings
  assign card_product = bl_stts.product

  if bl_stts.width == 'custom'
    assign is_card_title_custom_width = true
  endif
-%}
<div
  class="card--block-title size-style{% if bl_stts.clamp == true %} text-clamp-style{% endif %}"
  style="
    --text-align: {{ bl_stts.alignment }};
    {%- if bl_stts.clamp == true -%}
      --text-clamp: {{ bl_stts.clamp_row }};
    {%- endif -%}
    {%- render 'size-style', settings: bl_stts -%}
  "
>
  {%- if card_product and card_product != empty -%}
    {%- if is_card_title_custom_width -%}
      {%- render 'card-product-heading', card_product: card_product, block: block, is_card_title_custom_width: is_card_title_custom_width -%}
    {%- else -%}
      {%- render 'card-product-heading', card_product: card_product, block: block -%}
    {%- endif -%}
    {%- if request.page_type == 'collection' -%}
      {% assign description = card_product.description | strip_html | truncatewords: 44 %}
      <div class="product-description__collection none">
        {{ description }}
      </div>
    {%- endif -%}
  {%- else -%}
    {%- assign placeholder = 'content.product_title' | t -%}
    {% render 'text', fallback_text: placeholder, block: block %}
  {%- endif -%}
</div>
{% schema %}
{
  "name": "t:names.product_title",
  "tag": null,
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "t:settings.product"
    },
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit"
        },
        {
          "value": "100%",
          "label": "t:options.fill"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "select",
      "id": "unit",
      "label": "t:settings.unit",
      "visible_if": "{{ block.settings.width == 'custom' }}",
      "options": [
        {
          "value": "pixel",
          "label": "t:options.pixel"
        },
        {
          "value": "percent",
          "label": "t:options.percent"
        }
      ],
      "default": "percent"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == 'custom' and block.settings.unit == 'percent' }}"
    },
    {
      "type": "range",
      "id": "custom_width_pixel",
      "label": "t:settings.custom_width",
      "min": 500,
      "max": 2000,
      "step": 20,
      "unit": "px",
      "default": 500,
      "visible_if": "{{ block.settings.width == 'custom' and block.settings.unit == 'pixel' }}"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:settings.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "left",
      "visible_if": "{{ block.settings.width == '100%' }}"
    },
    {
      "type": "checkbox",
      "id": "clamp",
      "label": "t:settings.clamp",
      "default": false
    },
    {
      "type": "range",
      "id": "clamp_row",
      "label": "t:settings.clamp_row",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 2,
      "visible_if": "{{ block.settings.clamp == true }}"
    },
    {
      "type": "header",
      "content": "t:content.typography"
    },
    {
      "type": "select",
      "id": "type_preset",
      "label": "t:settings.preset",
      "options": [
        {
          "value": "rte",
          "label": "t:options.default"
        },
        {
          "value": "paragraph",
          "label": "t:options.paragraph"
        },
        {
          "value": "h1",
          "label": "t:options.h1"
        },
        {
          "value": "h2",
          "label": "t:options.h2"
        },
        {
          "value": "h3",
          "label": "t:options.h3"
        },
        {
          "value": "h4",
          "label": "t:options.h4"
        },
        {
          "value": "h5",
          "label": "t:options.h5"
        },
        {
          "value": "h6",
          "label": "t:options.h6"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "rte",
      "info": "t:info.edit_presets_in_theme_settings"
    },
    {
      "type": "select",
      "id": "font",
      "label": "t:settings.font",
      "options": [
        {
          "value": "var(--font-body--family)",
          "label": "t:options.body"
        },
        {
          "value": "var(--font-subheading--family)",
          "label": "t:options.subheading"
        },
        {
          "value": "var(--font-heading--family)",
          "label": "t:options.heading"
        }
      ],
      "default": "var(--font-body--family)",
      "visible_if": "{{ block.settings.type_preset == 'custom' }}"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "t:settings.size",
      "options": [
        {
          "value": "",
          "label": "t:options.default"
        },
        {
          "value": "1.0rem",
          "label": "10px"
        },
        {
