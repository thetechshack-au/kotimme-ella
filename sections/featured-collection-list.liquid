{{ 'template-collection.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- liquid
  assign sec_id = section.id
  assign sec_stts = section.settings

  assign products_to_display = sec_stts.collection.all_products_count

  assign max_items = sec_stts.products_to_show

  if sec_stts.collection.all_products_count > max_items
    assign products_to_display = max_items
    assign more_in_collection = true
  endif

  assign columns_mobile = sec_stts.columns_mobile
  assign columns_mobile_int = columns_mobile | plus: 0
  assign show_mobile_slider = false
  if sec_stts.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign columns_desktop = sec_stts.columns_desktop
  assign columns_tablet = 2
  if columns_desktop == 1
    assign columns_tablet = 1
  elsif columns_desktop >= 4
    assign columns_tablet = 3
  endif

  assign section_collections = sec_stts.collection.products | default: (1..max_items)
  assign section_collections_list = sec_stts.collection_list
  for collection in section_collections_list
    assign collection_list_count = forloop.length
  endfor

  assign enable_navigation = false
  if sec_stts.navigation == 'arrows-pagination' or sec_stts.navigation == 'arrows'
    assign enable_navigation = true
  endif

  assign enable_pagination = false
  if sec_stts.navigation == 'pagination' or sec_stts.navigation == 'arrows-pagination'
    assign enable_pagination = true
  endif

  assign layout_type = sec_stts.layout_type

  assign section_has_settings_media = false
  if layout_type == 'tabs-grid' or layout_type == 'tabs-carousel'
    assign section_has_settings_media = true
    assign has_tabs_header = true
  endif

  assign has_media_banner = false
  if section.settings.media_type == 'image'
    if section.settings.banner_image != blank
      assign has_media_banner = true
    endif
  elsif section.settings.media_type == 'video'
    assign has_media_banner = true
  endif

  assign scroll_reveal = false
-%}

{% comment %} Layout type [tabs-grid] and [tabs-carousel] {% endcomment %}
{%- capture attr_tabs_header_wrapper -%}
  class="tabs-product-header-wrapper flex md:justify-{{ sec_stts.tabs_header_alignment | replace: 'left', 'start' | replace: 'right', 'end' }}"
  style="
    {% if sec_stts.tabs_header_style == 'default' %}
      --pt: {{ sec_stts.tabs_header_padding_top | times: 0.1 }}rem;
      --pb: {{ sec_stts.tabs_header_padding_bottom | times: 0.1 }}rem;
    {% endif %}
  "
{%- endcapture -%}

{%- capture attr_tabs_header -%}
  class="tabs-product-header flex justify-start overflow-x-auto hide-scrollbar-mobile"
  style="
    --gap-x: {{ sec_stts.tabs_header_gap }}px;
  "
{%- endcapture -%}

{%- capture class_tabs_header_item -%}
  tabs-product-header__item whitespace-nowrap
  {{ sec_stts.style_class }}
  {% if sec_stts.link_reveal and sec_stts.style_class == 'link' %}link--reveal{% endif %}
  {% if sec_stts.link_underline %}link--underline{% endif %}
  {% if sec_stts.link_hover_underline and sec_stts.style_class == 'link' and sec_stts.link_underline == false %}link--hover-underline{% endif %}
  {% if sec_stts.button_style == 'outline' %}button--outline{% endif %}
{%- endcapture -%}

{%- capture style_tabs_header_item -%}
  --button-padding-vertical: {{ sec_stts.tabs_header_padding_block_items }}px;
  --button-padding-vertical-mobile: {{ sec_stts.tabs_header_padding_block_items | times: 0.75 }}px;
  --button-padding-horizontal: {{ sec_stts.tabs_header_padding_inline_items }}px;
  --button-padding-horizontal-mobile: {{ sec_stts.tabs_header_padding_inline_items | times: 0.75 }}px;
  {% render 'button-style', settings: sec_stts %}
{%- endcapture -%}

{% assign class_tabs_product_grid = 'tabs-product-grid tabs-component-content' %}
{% comment %} Layout type [tabs-grid] and [tabs-carousel] {% endcomment %}

<div
  class="section section--{{ section.settings.section_width }} color-{{ sec_stts.color_scheme }} relative z-0 spacing-style"
  style="
    {% if section.settings.section_width == 'custom' %}
      --page-content-width: {{ section.settings.page_width_custom | divided_by: 10 }}rem;
      --page-width: calc(var(--page-content-width) + var(--page-margin) * 2);
    {% endif %}
    {% render 'spacing-style', settings: section.settings %}
  "
>
  <div class="type-style--{{ sec_stts.layout_type }}">
    {%- liquid
      assign heading_type_preset = sec_stts.heading_type_preset
      assign heading_font = sec_stts.heading_font
      assign heading_font_size = sec_stts.heading_font_size
      assign heading_case = sec_stts.heading_case
      assign heading_margin_bottom = sec_stts.heading_margin_bottom

      if heading_font_size contains 'heading-lg' or heading_font_size contains 'heading-xl'
        assign heading_type = 'display'
      elsif heading_font_size contains 'heading'
        assign heading_type = 'heading'
      else
        assign heading_type = 'body'
      endif
      if heading_type_preset == 'rte' or heading_type_preset == 'paragraph'
        assign is_heading_rte = true
      endif

      assign subheading_type_preset = sec_stts.subheading_type_preset
      assign subheading_font = sec_stts.subheading_font
      assign subheading_font_size = sec_stts.subheading_font_size
      assign subheading_case = sec_stts.subheading_case
      assign subheading_margin_bottom = sec_stts.subheading_margin_bottom

      if subheading_font_size contains 'heading-lg' or subheading_font_size contains 'heading-xl'
        assign subheading_type = 'display'
      elsif subheading_font_size contains 'heading'
        assign subheading_type = 'heading'
      else
        assign subheading_type = 'body'
      endif
      if subheading_type_preset == 'rte' or subheading_type_preset == 'paragraph'
        assign is_subheading_rte = true
      endif

      assign text_type_preset = sec_stts.text_type_preset
      assign text_font = sec_stts.text_font
      assign text_font_size = sec_stts.text_font_size
      assign text_case = sec_stts.text_case
      assign text_margin_bottom = sec_stts.text_margin_bottom

      if text_font_size contains 'heading-lg' or text_font_size contains 'heading-xl'
        assign text_type = 'display'
      elsif text_font_size contains 'heading'
        assign text_type = 'heading'
      else
        assign text_type = 'body'
      endif
      if text_type_preset == 'rte' or text_type_preset == 'paragraph'
        assign is_text_rte = true
      endif

      assign content_media_position = sec_stts.content_media_position
      assign content_media_alignment = sec_stts.content_media_alignment

      assign columns_gap = sec_stts.columns_gap
      assign rows_gap = sec_stts.rows_gap

      assign pagination_type = sec_stts.pagination_type

      assign show_view_all = sec_stts.show_view_all
      assign view_all_style = sec_stts.view_all_style
    -%}

    {% capture heading_block_classes %}
      {% if heading_type_preset == 'custom' %}
        echo ' custom-typography ';
        {% if heading_font_size != '' %}
          echo ' custom-font-size ';
        {% endif %}
        {% if heading_color != '' %}
          echo ' custom-color ';
        {% endif %}
      {% endif %}
      {% if is_heading_rte %}
        echo ' rte ';
      {% endif %}
    {% endcapture %}

    {% capture subheading_block_classes %}
      {% if subheading_type_preset == 'custom' %}
        echo ' custom-typography ';
        {% if subheading_font_size != '' %}
          echo ' custom-font-size ';
        {% endif %}
        {% if subheading_color != '' %}
          echo ' custom-color ';
        {% endif %}
      {% endif %}
      {% if is_subheading_rte %}
        echo ' rte ';
      {% endif %}
    {% endcapture %}

    {% capture text_block_classes %}
      {% if text_type_preset == 'custom' %}
        echo ' custom-typography ';
        {% if text_font_size != '' %}
          echo ' custom-font-size ';
        {% endif %}
        {% if text_color != '' %}
          echo ' custom-color ';
        {% endif %}
      {% endif %}
      {% if is_text_rte %}
        echo ' rte ';
      {% endif %}
    {% endcapture %}

    {% capture attributes %}
        class=" spacing-style {{ heading_type_preset }} {{ heading_block_classes }} content-inside-media__heading"
        style="--margin-block-end: {{ heading_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: heading_type_preset, font: heading_font, font_size: heading_font_size, case: heading_case %}"
      {% endcapture %}

    {% capture attributes_subheading %}
        class=" spacing-style {{ subheading_type_preset }} {{ subheading_block_classes }} content-inside-media__subheading"
        style="--margin-block-end: {{ subheading_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: subheading_type_preset, font: subheading_font, font_size: subheading_font_size, case: subheading_case %}"
      {% endcapture %}

    {% capture attributes_text %}
        class=" spacing-style {{ text_type_preset }} {{ text_block_classes }} content-inside-media__text"
        style="--margin-block-end: {{ text_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: text_type_preset, font: text_font, font_size: text_font_size, case: text_case %}"
      {% endcapture %}

    {%- capture content_insde_media -%}
      {%- liquid
        assign content_heading = sec_stts.content_heading
        assign content_subheading = sec_stts.content_subheading
        assign content_text = sec_stts.content_text
        assign content_button_label = sec_stts.content_button_label
        assign content_button_link = sec_stts.content_button_link
        assign content_button_style = sec_stts.content_button_style
      -%}
      {% if content_heading != blank or content_subheading != blank or content_text != blank  or content_button_label != blank %}
        <div class="content-inside-media absolute-c-c w-full h-full flex items-{{content_media_position | replace: 'top', 'start' | replace: 'bottom', 'end'}} justify-{{ content_media_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} {{ content_media_alignment }}">
          <div class="content-inside-media__inner">
            {% if content_heading != blank %}
              <h3 {{ attributes }}>{{ content_heading }}</h3>
            {% endif %}
            {% if content_subheading != blank %}
              <h4 {{ attributes_subheading }}>{{ content_subheading }}</h4>
            {% endif %}
            {% if content_text != blank %}
              <div {{ attributes_text }}>{{ content_text }}</div>
            {% endif %}
            {% if content_button_label != blank %}
              {% render 'button', link: content_button_link, style_class: content_button_style, label: content_button_label %}
            {% endif %}
          </div>
        </div>
      {% endif %}
      {%- endcapture -%}

    {%- capture banner_image_html -%}
      {%- liquid
        assign banner_image = sec_stts.banner_image
      -%}
      {% if banner_image != blank %}
        {%- liquid
          assign ratio = sec_stts.media_ratio
          assign image_height = banner_image.width | divided_by: banner_image.aspect_ratio
        -%}
        <figure class="collection-banner m-0 media media-block media--{{ ratio }}" style="--media-image-fit: {{ sec_stts.image_position }};{% if ratio == 'adapt' %}--media-adapt-ratio: {{ banner_image.aspect_ratio }};{% endif %}">
          {%- render 'image',
            image: banner_image,
            class: 'collection-banner__image media-block__image',
            height: image_height,
          -%}
          <figcaption class="collection-banner__caption">
            {{ content_insde_media }}
          </figcaption>
        </figure>
      {% endif %}
      {%- endcapture -%}

    {%- capture banner_video_html -%}
      {% if sec_stts.video != blank or sec_stts.video_url != blank %}
        {%- liquid
          assign ratio = sec_stts.media_ratio
          assign banner_image_video = sec_stts.banner_image_video
        -%}

        {% capture video_style %}
          --size-style-width: 100%; --size-style-width-mobile: 100%;
          --media-image-fit: {{ sec_stts.image_position }};
          {% if ratio == 'adapt' %}
            --media-adapt-ratio: {% if banner_image_video == blank %}16/9{% else %}{{ banner_image_video.aspect_ratio }}{% endif %};
          {% endif %}
        {% endcapture %}

        <div class="collection-banner">
          {%- if sec_stts.video_display_mode == 'inline' -%}
            <figure class="video-wrapper m-0 relative">
              <div class="video-inner">
                {% if section.settings.source == 'uploaded' %}
                  {% render 'video',
                    video: sec_stts.video,
                    video_class: 'spacing-style size-style border-style',
                    video_loop: sec_stts.video_loop,
                    video_autoplay: sec_stts.video_autoplay,
                    video_style: video_style,
                    video_ratio: ratio,
                    video_preview_image: banner_image_video,
                    additional_attributes: section.shopify_attributes,
                    section: section
                  %}
                {% else %}
                  {% render 'video',
                    video_from_url: true,
                    video: sec_stts.video_url.id,
                    video_class: 'spacing-style size-style border-style',
                    video_type: sec_stts.video_url.type,
                    video_autoplay: sec_stts.video_autoplay,
                    video_style: video_style,
                    video_ratio: ratio,
                    video_alt: sec_stts.alt,
                    video_preview_image: banner_image_video,
                    additional_attributes: section.shopify_attributes,
                    section: section
                  %}
                {% endif %}
              </div>
              <figcaption class="video-wrapper__caption">
                {{ content_insde_media }}
              </figcaption>
            </figure>
          {%- else -%}
            <div class="video-poster relative">
              <modal-opener data-modal="#VideoModal-{{ sec_id }}" class="video-poster-button absolute-c-c z-1">
                <button
                  id="video-poster-button-{{ sec_id }}"
                  type="button"
                  class="button button-unstyled"
                  aria-haspopup="dialog"
                >
                  <span class="video-poster-button__icon deferred-media__poster-icon">
                    <span class="visually-hidden">{{ 'accessibility.play_video' | t }}</span>
                    {{- 'icon-play.svg' | inline_asset_content -}}
                  </span>
                </button>
              </modal-opener>
              {% if banner_image_video != blank %}
                {%- liquid
                  assign ratio = sec_stts.media_ratio
                  assign image_height = banner_image_video.width | divided_by: banner_image_video.aspect_ratio
                -%}
                <figure class="collection-banner m-0 media media-block media--{{ ratio }}" style="--media-image-fit: {{ sec_stts.image_position }};{% if ratio == 'adapt' %}--media-adapt-ratio: {{ banner_image_video.aspect_ratio }};{% endif %}">
                  {%- render 'image',
                    image: banner_image_video,
                    class: 'collection-banner__image media-block__image',
                    height: image_height,
                  -%}
                  <figcaption class="collection-banner__caption">
                    {{ content_insde_media }}
                  </figcaption>
                </figure>
              {% endif %}
            </div>
          {%- endif -%}
        </div>
      {% endif %}
      {%- endcapture -%}

    <div
      class="collection{% if sec_stts.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}{% if sec_stts.full_width %} collection--full-width{% endif %}"
      id="collection-{{ sec_id }}"
      data-id="{{ sec_id }}"
      data-product-block
    >
      <div class="section-global__header overflow-hidden" data-check-tabs="{{ sec_id }}">
        {%- content_for 'block', type: '_section-header', id: 'section-header', collections: section_collections_list -%}

        {% comment %} Button tab header item {% endcomment %}
        {% if sec_stts.tabs_header_style == 'inside_section_header' %}
          {%- if section_collections_list != blank -%}
            {% if collection_list_count > 1 and has_tabs_header %}
              <template class="tabs-component-template">
                  <tabs-header class="tabs-header" style="--tabs_header_max_width: {{ sec_stts.tabs_header_max_width }}%;">
                    <div {{ attr_tabs_header_wrapper }} >
                      <div {{ attr_tabs_header }} >
                        {%- capture labels -%}
                          {%- for collection in section_collections_list -%}
                            {{ collection.title | escape | default: 'Collection title' }}
                            {%- unless forloop.last -%}
                              ,
                            {%- endunless -%}
                          {%- endfor -%}
                        {%- endcapture -%}

                        {%- render 'tab-header-item',
                          id: sec_id,
                          labels: labels,
                          class: class_tabs_header_item,
                          style: style_tabs_header_item,
                          style_class: sec_stts.style_class
                        -%}
                      </div>
                    </div>
                  </tabs-header>
              </template>
            {% endif %}
          {%- else -%}
            {%- liquid
              for i in (1..4)
                assign section_collections_list = section_collections_list | append: ', '
              endfor

              assign section_collections_list = section_collections_list | split: ','
            -%}

            {% if has_tabs_header %}
              <template class="tabs-component-template">
                <tabs-header {{ attr_tabs_header }}>
                  {%- capture labels -%}
                    {%- for collection in section_collections_list limit: 4 -%}
                      {{ collection.title | escape | default: 'Collection title' }}
                      {%- unless forloop.last -%}
                        ,
                      {%- endunless -%}
                    {%- endfor -%}
                  {%- endcapture -%}

                  {%- render 'tab-header-item',
                    id: sec_id,
                    labels: labels,
                    class: class_tabs_header_item,
                    style: style_tabs_header_item,
                    style_class: sec_stts.style_class
                  -%}
                </tabs-header>
              </template>
            {% endif %}
          {%- endif -%}
        {% endif %}
      </div>

      {%- capture class_media -%}
        has-media-banner grid grid-layout items-{{ sec_stts.align_items }} media-block--{{ section.settings.media_size }}
        {%- if sec_stts.position == 'right' %} has-media-banner-right{%- endif %}
      {%- endcapture -%}

      {%- capture style_media -%}
        --gap: {{ columns_gap }}px;
        {%- if sec_stts.position == 'right' %}
          --grid-template-areas: 'content banner';
        {%- endif -%}
        {%- if section.settings.height == 'fill' -%}
          --size-style-height: 100%;
        {%- elsif section.settings.height == 'fit' -%}
          --size-style-height: fit-content;
        {%- endif -%}
      {%- endcapture -%}

      <div
        class="section-global__content{% if has_media_banner %} {{ class_media }} {% endif %}"
        {% if has_media_banner %}style="{{ style_media }}"{% endif %}
      >
        {%- if section.settings.position == 'left' and section_has_settings_media -%}
          {%- if section.settings.media_type == 'image' -%}
            {{ banner_image_html }}
          {%- elsif section.settings.media_type == 'video' -%}
            {{ banner_video_html }}
          {%- endif -%}
        {%- endif -%}

        {% case layout_type %}
          {% when 'tabs-grid' %}
            {%- capture attr_ul -%}
              id="Grid-tabs-{{ sec_id }}"
              data-id="{{ sec_id }}"
              role="list"
              aria-label="{{ 'content.grid.name' | t }}"
              style="--grid-desktop-horizontal-spacing: {{ columns_gap }}px; --grid-desktop-vertical-spacing: {{ rows_gap }}px;"
            {%- endcapture -%}

            <tabs-component class="{% if has_media_banner %}block overflow-hidden{% endif %} ">
              {%- if section_collections_list != blank -%}
                <div {{ attr_tabs_header_wrapper }}>
                  {% if sec_stts.tabs_header_style == 'default' and collection_list_count > 1 and has_tabs_header %}
                    <div {{ attr_tabs_header }}>
                      {%- capture labels -%}
                        {%- for collection in section_collections_list -%}
                          {{ collection.title | escape | default: 'Collection title' }}
                          {%- unless forloop.last -%}
                            ,
                          {%- endunless -%}
                        {%- endfor -%}
                      {%- endcapture -%}

                      {%- render 'tab-header-item',
                        id: sec_id,
                        labels: labels,
                        class: class_tabs_header_item,
                        style: style_tabs_header_item,
                        style_class: sec_stts.style_class
                      -%}
                    </div>
                  {% endif %}
                </div>

                {% for collection in section_collections_list %}
                  {%- liquid
                    assign section_collections = collection.products

                    assign products_to_display = collection.all_products_count

                    assign show_mobile_slider = false
                    if sec_stts.swipe_on_mobile and products_to_display > columns_mobile_int
                      assign show_mobile_slider = true
                    endif

                    assign more_in_collection = false
                    if collection.all_products_count > max_items
                      assign more_in_collection = true
                    endif
                  -%}

                  <div
                    id="tabs-{{ sec_id }}-{{ forloop.index }}"
                    class="{{ class_tabs_product_grid }}{% if forloop.first %} --active{% endif %}"
                  >
                    {%- unless forloop.first -%}
                      <template class="tabs-component-template">
                    {%- endunless -%}
                    {%- if show_mobile_slider -%}
                      <swiper-component
                        class="swiper-component-mobile"
                        data-swiper-mobile
                        {%- render 'swiper-data',
                          settings: section.settings,
                          loop: false,
                          slides_per_view: columns_mobile,
                          space_between: columns_gap
                        -%}
                        style="
                          {% render 'swiper-style',
                            columns_mobile: columns_mobile,
                            columns_tablet: columns_tablet,
                            columns_desktop: columns_desktop,
                            columns_gap: columns_gap,
                          %}
                        "
                      >
                        <div class="swiper">
                    {%- endif -%}
                    <ul
                      {{ attr_ul }}
                      class="grid grid-layout list-unstyled{% if show_mobile_slider %} swiper-wrapper md:grid{% endif %} lg:grid-layout--{{ columns_desktop }} md:grid-layout--3 grid--{{ columns_mobile }}-col-mobile"
                    >
                      {% for product in section_collections limit: max_items %}
                        <li
                          id="Grid-item-{{ product.id }}-{{ forloop.index }}"
                          class="grid__item{% if show_mobile_slider or layout_type == 'carousel' %} swiper-slide{% endif %}{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
                          {% if scroll_reveal %}
                            style="--animation-order: {{ forloop.index }};"
                          {% endif %}
                        >
                          {% content_for 'block',
                            type: 'card-product-flex',
                            id: 'product-slide-item',
                            closest.product: product
                          %}
                        </li>
                      {% endfor %}
                    </ul>
                    {%- if show_mobile_slider -%}
                      </div>
                      </swiper-component>
                    {%- endif -%}
                    {%- if show_view_all and more_in_collection -%}
                      <div class="center collection__view-all{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}">
                        <a
                          href="{{ collection.url }}"
                          class="{% if view_all_style == 'link' %}link underlined-link{% elsif view_all_style == 'solid' %}button{% else %}button-secondary{% endif %}"
                          aria-label="{{ 'content.view_all_label' | t: collection_name: sec_stts.collection.title | escape }}"
                        >
                          {{ 'content.view_all' | t }}
                        </a>
                      </div>
                    {%- endif -%}
                    {%- unless forloop.first -%}
                      </template>
                    {%- endunless -%}
                  </div>
                {% endfor %}
              {%- else -%}
                {%- liquid
                  assign limit = 4

                  for i in (1..4)
                    assign section_collections_list = section_collections_list | append: ', '
                  endfor

                  assign section_collections_list = section_collections_list | split: ','

                  assign show_mobile_slider = false
                  if sec_stts.swipe_on_mobile
                    assign show_mobile_slider = true
                  endif
                -%}

                {% if sec_stts.tabs_header_style == 'default' and has_tabs_header %}
                  <div {{ attr_tabs_header }}>
                    {%- capture labels -%}
                      {%- for collection in section_collections_list limit: limit -%}
                        {{ collection.title | escape | default: 'Collection title' }}
                        {%- unless forloop.last -%}
                          ,
                        {%- endunless -%}
                      {%- endfor -%}
                    {%- endcapture -%}

                    {%- render 'tab-header-item',
                      id: sec_id,
                      labels: labels,
                      class: class_tabs_header_item,
                      style: style_tabs_header_item,
                      style_class: sec_stts.style_class
                    -%}
                  </div>
                {% endif %}

                {% for collection in section_collections_list limit: limit %}
                  {%- assign section_collections = collection.products | default: (1..max_items) -%}

                  <div
                    id="tabs-{{ sec_id }}-{{ forloop.index }}"
                    class="{{ class_tabs_product_grid }}{% if forloop.first %} --active{% endif %}"
                  >
                    <template class="tabs-component-template">
                      {%- if show_mobile_slider -%}
                        <swiper-component
                          class="swiper-component-mobile"
                          data-swiper-mobile
                          {%- render 'swiper-data',
                            settings: section.settings,
                            loop: false,
                            slides_per_view: columns_mobile,
                            space_between: columns_gap
                          -%}
                          style="
                            {% render 'swiper-style',
                              columns_mobile: columns_mobile,
                              columns_tablet: columns_tablet,
                              columns_desktop: columns_desktop,
                              columns_gap: columns_gap,
                            %}
                          "
                        >
                          <div class="swiper">
                      {%- endif -%}
                      <ul
                        {{ attr_ul }}
                        class="grid grid-layout list-unstyled{% if show_mobile_slider %} swiper-wrapper md:grid{% endif %} lg:grid-layout--{{ columns_desktop }} md:grid-layout--3 grid--{{ columns_mobile }}-col-mobile"
                      >
                        {% for product in section_collections limit: max_items %}
                          <li
                            id="Grid-item-{{ product.id }}-{{ forloop.index }}"
                            class="grid__item{% if show_mobile_slider or layout_type == 'carousel' %} swiper-slide{% endif %}{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
                            {% if scroll_reveal %}
                              style="--animation-order: {{ forloop.index }};"
                            {% endif %}
                          >
                            {% content_for 'block', type: 'card-product-flex', id: 'product-slide-item', closest.product: product %}
                          </li>
                        {% endfor %}
                      </ul>
                      {%- if show_mobile_slider -%}
                        </div>
                        </swiper-component>
                      {%- endif -%}
                    </template>
                  </div>
                {% endfor %}
              {%- endif -%}
            </tabs-component>
          {% when 'tabs-carousel' %}
            {%- capture attr_ul -%}
              id="Grid-tabs-{{ sec_id }}"
              data-id="{{ sec_id }}"
              role="list"
              aria-label="{{ 'content.grid.name' | t }}"
              style="--grid-desktop-horizontal-spacing: {{ columns_gap }}px; --grid-desktop-vertical-spacing: {{ rows_gap }}px;"
            {%- endcapture -%}

            <tabs-component class="{% if has_media_banner %}block overflow-hidden{% endif %}">
              {%- if section_collections_list != blank -%}
                  <div {{ attr_tabs_header_wrapper }} >
                    {% if sec_stts.tabs_header_style == 'default' and collection_list_count > 1 and has_tabs_header %}
                      <div {{ attr_tabs_header }}>
                        {%- capture labels -%}
                          {%- for collection in section_collections_list -%}
                            {{ collection.title | escape | default: 'Collection title' }}
                            {%- unless forloop.last -%}
                              ,
                            {%- endunless -%}
                          {%- endfor -%}
                        {%- endcapture -%}

                        {%- render 'tab-header-item',
                          id: sec_id,
                          labels: labels,
                          class: class_tabs_header_item,
                          style: style_tabs_header_item,
                          style_class: sec_stts.style_class
                        -%}
                      </div>
                    {% endif %}
                  </div>
                  {% for collection in section_collections_list %}
                    {%- liquid
                      assign section_collections = collection.products

                      assign products_to_display = collection.all_products_count

                      assign show_mobile_slider = false
                      if sec_stts.swipe_on_mobile and products_to_display > columns_mobile_int
                        assign show_mobile_slider = true
                      endif

                      assign more_in_collection = false
                      if collection.all_products_count > max_items
                        assign more_in_collection = true
                      endif
                    -%}

                    <div
                      id="tabs-{{ sec_id }}-{{ forloop.index }}"
                      class="{{ class_tabs_product_grid }}{% if forloop.first %} --active{% endif %}"
                    >
                      {%- unless forloop.first -%}
                        <template class="tabs-component-template">
                      {%- endunless -%}
                        {%- capture breakpoints -%}
                          {
                            "768": { "slidesPerView": {{ columns_tablet }} },
                            "1024": { "slidesPerView": {{ columns_tablet }} },
                            "1400": { "slidesPerView": {{ columns_desktop }} }
                          }
                        {%- endcapture -%}
                        <swiper-component
                          class="collection-carousel-swiper-component{% if section.settings.full_width and section.settings.section_width == 'page-width' %} full-width{% endif %}"
                          {%- render 'swiper-data',
                            settings: section.settings,
                            loop: false,
                            slides_per_view: columns_mobile,
                            space_between: columns_gap,
                            watch_slides_progress: true,
                            breakpoints: breakpoints
                          -%}
                          style="
                            {% render 'swiper-style',
                              columns_mobile: columns_mobile,
                              columns_tablet: columns_tablet,
                              columns_desktop: columns_desktop,
                              columns_gap: columns_gap,
                            %}
                          "
                        >
                          <div class="swiper"
                          style="
                            {% if sec_stts.pagination_type == 'bullets' and sec_stts.navigation == 'pagination' or sec_stts.navigation == 'arrows-pagination' %}
                              --dots-top-offset: {{ sec_stts.dots_top_offset }}px;
                            {% elsif sec_stts.pagination_type == 'progressbar' and sec_stts.navigation == 'pagination' or sec_stts.navigation == 'arrows-pagination' %}
                              --progress-top-offset: {{ sec_stts.progress_top_offset }}px;
                            {% endif %}
                            "
                          >
                            <ul
                              id="Slider-{{ sec_id }}"
                              data-id="{{ sec_id }}"
                              class="swiper-wrapper grid-layout-no-js list-unstyled  lg:grid-layout--{{ columns_desktop }} md:grid-layout--3 grid--{{ columns_mobile }}-col-mobile"
                            >
                              {% for product in section_collections limit: max_items %}
                                <li
                                  id="Grid-item-{{ product.id }}-{{ forloop.index }}"
                                  class="grid__item swiper-slide{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
                                  {% if scroll_reveal %}
                                    style="--animation-order: {{ forloop.index }};"
                                  {% endif %}
                                >
                                  {% content_for 'block', type: 'card-product-flex', id: 'product-slide-item', closest.product: product %}
                                </li>
                              {% endfor %}
                            </ul>

                            {%- if enable_navigation -%}
                              <div class="swiper-btns-wrap small-hide">
                                {%- render 'swiper-button' -%}
                              </div>
                            {%- endif -%}
                            {%- if enable_pagination -%}
                              <div class="swiper-pagination"></div>
                            {%- endif -%}
                          </div>
                        </swiper-component>
                        {%- if show_view_all and more_in_collection -%}
                          <div class="center collection__view-all{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}">
                            <a
                              href="{{ collection.url }}"
                              class="m-x-auto {% if view_all_style == 'link' %}link underlined-link{% elsif view_all_style == 'solid' %}button{% else %}button-secondary{% endif %}"
                              aria-label="{{ 'content.view_all_label' | t: collection_name: sec_stts.collection.title | escape }}"
                            >
                              {{ 'content.view_all' | t }}
                            </a>
                          </div>
                        {%- endif -%}
                      {%- unless forloop.first -%}
                        </template>
                      {%- endunless -%}
                    </div>
                  {% endfor %}
              {%- else -%}
                  {%- liquid
                    assign limit = 4

                    for i in (1..4)
                      assign section_collections_list = section_collections_list | append: ', '
                    endfor

                    assign section_collections_list = section_collections_list | split: ','
                  -%}

                  <div {{ attr_tabs_header_wrapper }} >
                    {% if sec_stts.tabs_header_style == 'default' and has_tabs_header %}
                      <div {{ attr_tabs_header }}>
                        {%- capture labels -%}
                          {%- for collection in section_collections_list limit: limit -%}
                            {{ collection.title | escape | default: 'Collection title' }}
                            {%- unless forloop.last -%}
                              ,
                            {%- endunless -%}
                          {%- endfor -%}
                        {%- endcapture -%}

                        {%- render 'tab-header-item',
                          id: sec_id,
                          labels: labels,
                          class: class_tabs_header_item,
                          style: style_tabs_header_item,
                          style_class: sec_stts.style_class
                        -%}
                      </div>
                    {% endif %}
                  </div>

                  {% for collection in section_collections_list limit: limit %}
                    {%- assign section_collections = collection.products | default: (1..max_items) -%}

                    <div
                      id="tabs-{{ sec_id }}-{{ forloop.index }}"
                      class="{{ class_tabs_product_grid }}{% if forloop.first %} --active{% endif %}"
                    >
                      <template class="tabs-component-template">
                        {%- capture breakpoints -%}
                          {
                            "768": { "slidesPerView": {{ columns_tablet }} },
                            "1024": { "slidesPerView": {{ columns_tablet }} },
                            "1400": { "slidesPerView": {{ columns_desktop }} }
                          }
                        {%- endcapture -%}
                        <swiper-component
                          class="collection-carousel-swiper-component{% if section.settings.full_width and section.settings.section_width == 'page-width' %} full-width{% endif %}"
                          {%- render 'swiper-data',
                            settings: section.settings,
                            loop: false,
                            slides_per_view: columns_mobile,
                            space_between: columns_gap,
                            watch_slides_progress: true,
                            breakpoints: breakpoints
                          -%}
                          style="
                            {% render 'swiper-style',
                              columns_mobile: columns_mobile,
                              columns_tablet: columns_tablet,
                              columns_desktop: columns_desktop,
                              columns_gap: columns_gap,
                            %}
                          "
                        >
                          <div class="swiper">
                            <ul
                              id="Slider-{{ sec_id }}"
                              data-id="{{ sec_id }}"
                              class="swiper-wrapper grid-layout-no-js list-unstyled lg:grid-layout--{{ columns_desktop }} md:grid-layout--3 grid--{{ columns_mobile }}-col-mobile"
                            >
                              {% for product in section_collections limit: max_items %}
                                <li
                                  id="Grid-item-{{ product.id }}-{{ forloop.index }}"
                                  class="grid__item swiper-slide{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
                                  {% if scroll_reveal %}
                                    style="--animation-order: {{ forloop.index }};"
                                  {% endif %}
                                >
                                  {% content_for 'block', type: 'card-product-flex', id: 'product-slide-item', closest.product: product %}
                                </li>
                              {% endfor %}
                            </ul>

                            {%- if enable_navigation -%}
                              <div class="swiper-btns-wrap small-hide">
                                {%- render 'swiper-button' -%}
                              </div>
                            {%- endif -%}
                            {%- if enable_pagination -%}
                              <div class="swiper-pagination"></div>
                            {%- endif -%}
                          </div>
                        </swiper-component>
                      </template>
                    </div>
                  {% endfor %}
              {%- endif -%}
            </tabs-component>
          {% when 'vertical', 'duo' %}
            {%- liquid
              assign section_collections_list = sec_stts.collection_list
              if layout_type == 'duo'
                assign columns_layout = 2
                assign columns_block_items = sec_stts.columns_block_items
                assign columns_block_items_mobile = 2
                assign columns_block_items_tablet = 2
              else
                assign columns_layout = columns_desktop
                assign columns_block_items = 1
              endif

              assign slide_in_mobile = false
              if section_collections_list == blank
                assign slide_in_mobile = true
              endif

              for collection in section_collections_list
                assign collection_count = forloop.length

                if collection_count > 1
                  assign slide_in_mobile = true
                endif
              endfor
            -%}

            <div
              class="product-vertical{% if slide_in_mobile %} has_slide_mobile{% else %} grid grid-cols{% endif %}"
              style="--columns-vertical-int: repeat({{ columns_layout }}, minmax(0,1fr));"
            >
              {% if slide_in_mobile %}
                <swiper-component
                  class="swiper-component-mobileblock"
                  data-swiper-mobile
                  {%- render 'swiper-data',
                    settings: section.settings,
                    loop: false,
                    slides_per_view: 1,
                    space_between: 0,
                    pagination_type: 'bullets',
                    auto_height: true
                  -%}
                  style="
                    {% render 'swiper-style',
                      columns_mobile: 1,
                      columns_tablet: 1,
                      columns_desktop: 1,
                      columns_gap: columns_gap,
                    %}
                  "
                >
                  <div class="swiper">
                    <div
                      class="swiper-wrapper md:block grid-cols"
                      style="--md-gap: {{ rows_gap }}px {{ columns_gap }}px;"
                    >
              {% endif %}

              {% if section_collections_list != blank %}
                {% for collection in section_collections_list %}
                  {%- liquid
                    assign more_in_collection = false
                    if collection.all_products_count > max_items
                      assign more_in_collection = true
                    endif
                  -%}
                  <div
                    class="flex flex-column{% if slide_in_mobile %} swiper-slide{% endif %}"
                    style="--gap-y: {{ rows_gap }}px;"
                  >
                    <div class="flex flex-wrap items-center justify-between" style="--gap: 1rem;">
                      <div>
                        <h3>
                          <a href="{{ collection.url }}" class="full-unstyled-link font-bold">
                            {{ collection.title | escape | default: 'Collection title' }}
                          </a>
                        </h3>
                      </div>
                      {%- if show_view_all and more_in_collection and layout_type != 'duo' -%}
                        <a
                          href="{{ collection.url }}"
                          class="caption {% if view_all_style == 'link' %}link underlined-link{% elsif view_all_style == 'solid' %}button{% else %}button-secondary{% endif %}"
                          aria-label="{{ 'content.view_all_label' | t: collection_name: sec_stts.collection.title | escape }}"
                        >
                          {{ 'content.view_all' | t }}
                        </a>
                      {%- endif -%}
                    </div>
                    <div
                      class="grid grid-cols{% if layout_type == 'duo' %} grid-cols:sm grid-cols:md{% endif %}"
                      style="
                        --gap: {{ rows_gap }}px {{ columns_gap }}px;
                        --columns-vertical-int: repeat({{ columns_block_items }}, minmax(0,1fr));
                        {% if layout_type == 'duo' %}
                          --columns-vertical-int-sm: repeat({{ columns_block_items_mobile }}, minmax(0,1fr));
                          --columns-vertical-int-md: repeat({{ columns_block_items_tablet }}, minmax(0,1fr));
                        {% endif %}
                      "
                    >
                      {% for product in collection.products limit: max_items %}
                        {% content_for 'block', type: 'card-product-flex', id: 'product-slide-item', closest.product: product %}
                      {% endfor %}
                    </div>

                    {%- if show_view_all and more_in_collection and layout_type == 'duo' -%}
                      <div class="center">
                        <a
                          href="{{ collection.url }}"
                          class="caption {% if view_all_style == 'link' %}link underlined-link{% elsif view_all_style == 'solid' %}button{% else %}button-secondary{% endif %}"
                          aria-label="{{ 'content.view_all_label' | t: collection_name: sec_stts.collection.title | escape }}"
                        >
                          {{ 'content.view_all' | t }}
                        </a>
                      </div>
                    {%- endif -%}
                  </div>
                {% endfor %}
              {% else %}
                {%- liquid
                  if layout_type == 'duo'
                    assign limit = 2
                  else
                    assign limit = 4
                  endif

                  for i in (1..2)
                    assign section_collections_list = section_collections_list | append: ', '

                    assign collection_count = forloop.length

                    if collection_count > 1
                      assign slide_in_mobile = true
                    endif
                  endfor

                  assign section_collections_list = section_collections_list | split: ','
                -%}

                {% for collection in section_collections_list limit: limit %}
                  <div
                    class="flex flex-column{% if slide_in_mobile %} swiper-slide{% endif %}"
                    style="--gap-y: {{ rows_gap }}px;"
                  >
                    {%- assign section_collections = collection.products | default: (1..max_items) -%}

                    <div class="flex flex-wrap items-center justify-between" style="--gap: 1rem;">
                      <div>
                        <h3>
                          <a href="#" class="full-unstyled-link font-bold">
                            {{ collection.title | escape | default: 'Collection title' }}
                          </a>
                        </h3>
                      </div>
                    </div>

                    <div
                      class="grid grid-cols{% if layout_type == 'duo' %} grid-cols:sm grid-cols:md{% endif %}"
                      style="
                        --gap: {{ rows_gap }}px {{ columns_gap }}px;
                        --columns-vertical-int: repeat({{ columns_block_items }}, minmax(0,1fr));
                        {% if layout_type == 'duo' %}
                          --columns-vertical-int-sm: repeat({{ columns_block_items_mobile }}, minmax(0,1fr));
                          --columns-vertical-int-md: repeat({{ columns_block_items_tablet }}, minmax(0,1fr));
                        {% endif %}
                      "
                    >
                      {% for product in section_collections limit: max_items %}
                        {% content_for 'block', type: 'card-product-flex', id: 'product-slide-item', closest.product: product %}
                      {% endfor %}
                    </div>
                  </div>
                {% endfor %}
              {% endif %}

              {% if slide_in_mobile %}
                </div>
                <div class="swiper-pagination"></div>
                </div>
                </swiper-component>
              {% endif %}
            </div>
          {% when 'duo-carousel' %}
            {%- liquid
              assign columns_layout = 2
              assign section_collections_list = sec_stts.collection_list
              assign columns_block_items = sec_stts.columns_block_items
              assign columns_block_items_tablet = 2
              assign columns_block_items_mobile = 2
              assign max_items = sec_stts.products_to_show
            -%}

            <div
              class="product-duo-carousel md:grid grid-cols"
              style="
                --gap: {{ rows_gap }}px {{ columns_gap }}px;
                --columns-vertical-int: repeat({{ columns_layout }}, minmax(0,1fr));
              "
            >
              {% for collection in section_collections_list %}
                <div class="duo-carousel-item">
                  <div class="flex flex-wrap items-center justify-between" style="--gap: 1rem;">
                    <div>
                      <h3>
                        <a href="{{ collection.url }}" class="full-unstyled-link font-bold">
                          {{ collection.title | escape | default: 'Collection title' }}
                        </a>
                      </h3>
                    </div>
                    {%- if show_view_all and more_in_collection -%}
                      <a
                        href="{{ collection.url }}"
                        class="caption {% if view_all_style == 'link' %}link underlined-link{% elsif view_all_style == 'solid' %}button{% else %}button-secondary{% endif %}"
                        aria-label="{{ 'content.view_all_label' | t: collection_name: sec_stts.collection.title | escape }}"
                      >
                        {{ 'content.view_all' | t }}
                      </a>
                    {%- endif -%}
                  </div>

                  {%- capture breakpoints -%}
                    {
                      "768": { "slidesPerView": {{ columns_block_items_tablet }} },
                      "1024": { "slidesPerView": {{ columns_block_items_tablet }} },
                      "1400": { "slidesPerView": {{ columns_block_items }} }
                    }
                  {%- endcapture -%}
                  <swiper-component
                    class="collection-carousel-swiper-component"
                    {%- render 'swiper-data',
                      settings: section.settings,
                      loop: false,
                      slides_per_view: columns_block_items_mobile,
                      space_between: columns_gap,
                      breakpoints: breakpoints
                    -%}
                    style="
                      {% render 'swiper-style',
                        columns_mobile: columns_block_items_mobile,
                        columns_tablet: columns_block_items_tablet,
                        columns_desktop: columns_block_items,
                        columns_gap: columns_gap,
                      %}
                    "
                  >
                    <div class="swiper w-full">
                      <ul
                        class="swiper-wrapper grid-layout-no-js list-unstyled lg:grid-layout--{{ columns_block_items }} md:grid-layout--{{ columns_block_items_tablet }} grid--{{ columns_block_items_mobile }}-col-mobile"
                        id="Slider-{{ sec_id }}"
                        data-id="{{ sec_id }}"
                      >
                        {% for product in collection.products limit: max_items %}
                          <li id="Slide-{{ sec_id }}-{{ forloop.index }}" class="grid__item swiper-slide">
                            {% content_for 'block', type: 'card-product-flex', id: 'product-slide-item', closest.product: product %}
                          </li>
                        {% endfor %}
                      </ul>
                      {%- if enable_navigation -%}
                        <div class="swiper-btns-wrap small-hide">
                          {%- render 'swiper-button' -%}
                        </div>
                      {%- endif -%}
                      {%- if enable_pagination -%}
                        <div class="swiper-pagination"></div>
                      {%- endif -%}
                    </div>
                  </swiper-component>
                </div>
              {% endfor %}
            </div>
        {% endcase %}

        {%- if section.settings.position == 'right' and section_has_settings_media -%}
          {%- if section.settings.media_type == 'image' -%}
            {{ banner_image_html }}
          {%- elsif section.settings.media_type == 'video' -%}
            {{ banner_video_html }}
          {%- endif -%}
        {%- endif -%}
      </div>

      {% if sec_stts.image_shape == 'arch' %}
        {{ 'mask-arch.svg' | inline_asset_content }}
      {%- endif -%}

      <div class="section-global__blocks">
        {%- content_for 'blocks' -%}
      </div>
    </div>
  </div>
</div>

{%- if section_has_settings_media and section.settings.media_type == 'video' and sec_stts.video_display_mode == 'popup' -%}
  {%- render 'video-modal', stts: sec_stts, section: section, sec_id: sec_id -%}
{%- endif -%}

{% schema %}
{
  "name": "t:names.featured_collection_list",
  "tag": "section",
  "class": "section--featured-collection",
  "disabled_on": {
    "groups": ["header", "custom.popup", "aside"]
  },
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "layout_type",
      "label": "t:settings.type",
      "options": [
        {
          "value": "tabs-grid",
          "label": "t:options.tabs_grid"
        },
        {
          "value": "tabs-carousel",
          "label": "t:options.tabs_carousel"
        },
        {
          "value": "vertical",
          "label": "t:options.vertical"
        },
        {
          "value": "duo",
          "label": "t:options.duo"
        },
        {
          "value": "duo-carousel",
          "label": "t:options.duo_carousel"
        }
      ],
      "default": "tabs-grid"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "t:settings.collection_list"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 25,
      "step": 1,
      "default": 4,
      "label": "t:settings.maximum_products_to_show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "t:settings.number_of_columns_on_desktop",
      "visible_if": "{{ section.settings.layout_type != 'duo' and section.settings.layout_type != 'duo-carousel'}}"
    },
    {
      "type": "range",
      "id": "columns_block_items",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 1,
      "label": "t:settings.number_of_columns_items_on_desktop",
      "visible_if": "{{ section.settings.layout_type == 'duo' or section.settings.layout_type == 'duo-carousel' }}"
    },
    {
      "type": "range",
      "id": "columns_gap",
      "label": "t:settings.horizontal_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "rows_gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8,
      "visible_if": "{{ section.settings.layout_type == 'tabs-grid' or section.settings.layout_type == 'vertical' or section.settings.layout_type == 'duo' or section.settings.layout_type == 'duo-carousel' }}"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:settings.enable_view_all"
    },
    {
      "type": "select",
      "id": "view_all_style",
      "label": "t:settings.view_all_style",
      "options": [
        {
          "value": "link",
          "label": "t:settings.link"
        },
        {
          "value": "outline",
          "label": "t:options.outline_button"
        },
        {
          "value": "solid",
