{{ 'section-media-banner.css' | asset_url | stylesheet_tag }}

{% liquid
  assign media_class_modifier = 'media-banner--' | append: section.settings.media_width

  if section.settings.extend_media and section.settings.section_width == 'page-width'
    assign media_class_modifier = media_class_modifier | append: ' media-banner--media-extend'
  endif

  if section.settings.media_position == 'right'
    assign media_class_modifier = media_class_modifier | append: ' media-banner--media-right'
  elsif section.settings.media_position == 'stack'
    assign media_class_modifier = media_class_modifier | append: ' media-banner--media-stack'
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} relative disable-section-top-offset media-banner color-{{ section.settings.color_scheme }} spacing-style {{ media_class_modifier }} media-banner--height-{{ section.settings.media_height }}"
  data-testid="media-banner"
  style="
    {%- render 'spacing-style', settings: section.settings %}
    {% render 'border-override', settings: section.settings %}
    --media-height: {{ section.settings.media_height }};
    {%- case section.settings.media_height %}
      {% when '50svh' %}
        --media-height-mobile: 30svh;
      {% when '60svh' %}
        --media-height-mobile: 50svh;
      {% when '80svh' %}
        --media-height-mobile: 70svh;
      {% when '100svh' %}
        --media-height-mobile: 100svh;
      {% when 'custom' %}
        --media-height: {{ section.settings.media_height_custom }}svh;
        --media-height-mobile: {{ section.settings.media_height_custom }}svh;
    {% endcase -%}
    {% case section.settings.desktop_content_position %}
      {% when 'top-left' %}
        --content-inset: {{ section.settings.position_offset }}% auto auto {{ section.settings.position_offset }}%;
      {% when 'top-center' %}
        --content-inset: {{ section.settings.position_offset }}% auto auto 50%;
        --content-transform: translateX(-50%);
      {% when 'top-right' %}
        --content-inset: {{ section.settings.position_offset }}% {{ section.settings.position_offset }}% auto auto;
      {% when 'middle-left' %}
        --content-inset: 50% auto auto {{ section.settings.position_offset }}%;
        --content-transform: translateY(-50%);
      {% when 'middle-center' %}
        --content-inset: 50% auto auto 50%;
        --content-transform: translate(-50%, -50%);
      {% when 'middle-right' %}
        --content-inset: 50% {{ section.settings.position_offset }}% auto auto;
        --content-transform: translateY(-50%);
      {% when 'bottom-left' %}
        --content-inset: auto auto {{ section.settings.position_offset }}% {{ section.settings.position_offset }}%;
      {% when 'bottom-center' %}
        --content-inset: auto auto {{ section.settings.position_offset }}% 50%;
        --content-transform: translateX(-50%);
      {% when 'bottom-right' %}
        --content-inset: auto {{ section.settings.position_offset }}% {{ section.settings.position_offset }}% auto;
    {% endcase %}
    {% if section.settings.media_height != 'auto' %}
      --section-preview-height: 600px;
    {% endif %}
  "
  {% if request.visual_preview_mode %}
    data-shopify-visual-preview
  {% endif %}
>
  {% content_for 'block', type: '_media-without-appearance', id: 'media' %}
  {% content_for 'block', type: '_content-without-appearance', id: 'content' %}
</div>

