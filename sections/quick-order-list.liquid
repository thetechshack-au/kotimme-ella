          "label": "26px"
        },
        {
          "value": "2.8rem",
          "label": "28px"
        },
        {
          "value": "3.0rem",
          "label": "30px"
        },
        {
          "value": "3.2rem",
          "label": "32px"
        },
        {
          "value": "3.4rem",
          "label": "34px"
        },
        {
          "value": "3.6rem",
          "label": "36px"
        },
        {
          "value": "4.0rem",
          "label": "40px"
        }
      ],
      "default": "1.6rem"
    },
    {
      "type": "select",
      "id": "font_size_info",
      "label": "t:options.info",
      "options": [
        {
          "value": "",
          "label": "t:options.default"
        },
        {
