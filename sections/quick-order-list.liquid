{% render 'quick-order-list',
  product: product,
  show_image: section.settings.show_image,
  show_sku: section.settings.show_sku,
  font_size_heading: section.settings.font_size_heading,
  font_size_info: section.settings.font_size_info
%}

{% schema %}
{
  "name": "t:names.quick-order-list",
  "limit": 1,
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_image",
      "default": false,
      "label": "t:settings.show_images"
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "default": false,
      "label": "t:settings.show_skus"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "page_width_custom",
      "min": 1000,
      "max": 2000,
      "step": 10,
      "default": 1570,
      "unit": "px",
      "label": "t:settings.page_width",
      "visible_if": "{{ section.settings.section_width == 'custom' }}"
    },
    {
      "type": "header",
      "content": "t:content.typography"
    },
    {
      "type": "select",
      "id": "font_size_heading",
      "label": "t:settings.heading",
      "options": [
        {
          "value": "",
          "label": "t:options.default"
        },
        {
