{% liquid

  if enable_parallax == 'parallax_background'
    assign image_behavior = 'parallax'
  elsif enable_parallax == 'reveal_on_scroll'
    assign image_behavior = 'reveal_on_scroll'
  endif
  if background_media == 'video'
    render 'background-video', background_video: background_video, background_video_position: background_video_position, section_id: section_id, block_id: block_id, placeholder: placeholder, ratio: ratio
  elsif background_media == 'image'
    render 'background-image', background_image: background_image, background_image_position: background_image_position, image_behavior: image_behavior, section_id: section_id, block_id: block_id, placeholder: placeholder, ratio: ratio
  endif
%}
