      assign font_sizes = "paragraph, h1, h2, h3, h4, h5, h6" | split: ", "
      assign fluid_size_cutoff = 4.8
      assign absolute_font_size_min = 1.0

      assign font_size_values = ''
      for font_size in font_sizes
        assign size_setting = 'type_size_[font_size]' | replace: '[font_size]', font_size
        assign size_setting_value = settings[size_setting] | replace: 'rem', '' | times: 1

        if size_setting_value < 10
